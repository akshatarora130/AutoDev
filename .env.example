# ============================================
# Database Configuration
# ============================================
# Use your existing PostgreSQL database URL
DATABASE_URL=postgresql://user:password@host:port/database?schema=public

# ============================================
# GitHub OAuth Configuration
# ============================================
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/github/callback

# ============================================
# Session & Security
# ============================================
SESSION_SECRET=your-random-secret-key-change-in-production

# ============================================
# Application URLs
# ============================================
FRONTEND_URL=http://localhost:5173
VITE_API_URL=http://localhost:3000

# ============================================
# Server Ports
# ============================================
# Backend TypeScript (main API)
PORT=3000

# Connector Service
CONNECTOR_SERVICE_PORT=3001

# Deployment Service
DEPLOYMENT_SERVICE_PORT=3002

# ============================================
# Environment
# ============================================
NODE_ENV=development

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# LLM Configuration
# ============================================
# Provider: openrouter | openai | anthropic
LLM_PROVIDER=openrouter
LLM_API_KEY=your-llm-api-key
# Default model for all operations (use cheap models for testing)
LLM_MODEL=openai/gpt-3.5-turbo
# Model for code generation (Phase 3+) - use more capable models
LLM_MODEL_CODE_GEN=openai/gpt-4-turbo
# Model for code review (Phase 4+)
LLM_MODEL_CODE_REVIEW=anthropic/claude-3-sonnet

# ============================================
# Supermemory Configuration
# ============================================
# Get API key from https://console.supermemory.ai
SUPERMEMORY_API_KEY=your-supermemory-api-key

# ============================================
# Queue Configuration
# ============================================
# How often to check for new stories (in milliseconds)
QUEUE_CHECK_INTERVAL_MS=10000
